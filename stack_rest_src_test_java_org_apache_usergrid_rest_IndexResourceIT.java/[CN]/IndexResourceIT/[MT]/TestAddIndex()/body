{
  String superToken=superAdminToken();
  Map<String,Object> data=new HashMap<String,Object>();
  data.put("replicas",0);
  data.put("shards",1);
  UUID appId=this.context.getAppUuid();
  JsonNode node=mapper.readTree(resource().path("/index/" + appId).queryParam("access_token",superToken).accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).post(String.class,data));
  assertNull(getError(node));
  refreshIndex("test-organization","test-app");
}

{
  EntityManager em=emf.getEntityManager(CpNamingUtils.MANAGEMENT_APPLICATION_ID);
  logger.info("Setting username to {} for user with username {} and id {}",new Object[]{newUserName,other.getUsername(),other.getId()});
  try {
    em.setProperty(new SimpleEntityRef("user",other.getId()),"username",newUserName,true);
  }
 catch (  DuplicateUniquePropertyExistsException e) {
    logger.warn("More than 1 user has the username of {}.  Setting the username to their username+UUID as a " + "fallback",newUserName);
    setOrgUserName(other,String.format("%s-%s",other.getUsername(),other.getId()));
  }
}

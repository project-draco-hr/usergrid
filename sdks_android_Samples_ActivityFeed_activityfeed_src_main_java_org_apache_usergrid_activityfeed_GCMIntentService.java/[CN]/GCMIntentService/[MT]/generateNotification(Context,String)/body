{
  long when=System.currentTimeMillis();
  NotificationManager notificationManager=(NotificationManager)context.getSystemService(Context.NOTIFICATION_SERVICE);
  Intent notificationIntent=new Intent(context,MainActivity.class);
  notificationIntent.setFlags(Intent.FLAG_ACTIVITY_CLEAR_TOP | Intent.FLAG_ACTIVITY_SINGLE_TOP);
  PendingIntent intent=PendingIntent.getActivity(context,0,notificationIntent,0);
  Notification notification=new NotificationCompat.Builder(context).setContentText(message).setContentTitle(context.getString(R.string.app_name)).setWhen(when).setSmallIcon(R.drawable.usergridguy).setContentIntent(intent).build();
  notification.flags|=Notification.FLAG_AUTO_CANCEL;
  notification.defaults|=Notification.DEFAULT_SOUND;
  notification.defaults|=Notification.DEFAULT_VIBRATE;
  notificationManager.notify(0,notification);
}

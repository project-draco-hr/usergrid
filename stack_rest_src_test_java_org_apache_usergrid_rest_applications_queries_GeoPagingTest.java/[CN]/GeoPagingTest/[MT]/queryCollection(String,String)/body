{
  JsonNode node=null;
  try {
    node=context.collection(collectionType).withQuery(query).get();
  }
 catch (  UniformInterfaceException e) {
    JsonNode nodeError=mapper.readTree(e.getResponse().getEntity(String.class));
    fail(nodeError.get("error").textValue());
  }
  assertNotNull(node);
  return node;
}

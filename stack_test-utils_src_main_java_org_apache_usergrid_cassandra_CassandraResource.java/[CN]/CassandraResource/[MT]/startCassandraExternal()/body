{
  LOG.info("-------------------------------------------------------------------");
  LOG.info("Initializing External Cassandra");
  LOG.info("-------------------------------------------------------------------");
  LOG.info("before() test, setting system properties for ports : " + "[rpc, storage, sslStorage, native] = [{}, {}, {}, {}]",new Object[]{rpcPort,storagePort,sslStoragePort,nativeTransportPort});

{
  this.mapManager=mapManager;
  indexSchemaCache=CacheBuilder.newBuilder().maximumSize(indexSchemaCacheFig.getCacheSize()).expireAfterWrite(indexSchemaCacheFig.getCacheTimeout(),TimeUnit.MILLISECONDS).build(new CacheLoader<String,Optional<Map>>(){
    @Override public Optional<Map> load(    final String collectionName) throws Exception {
      return Optional.fromNullable(retrieveCollectionSchema(collectionName));
    }
  }
);
}

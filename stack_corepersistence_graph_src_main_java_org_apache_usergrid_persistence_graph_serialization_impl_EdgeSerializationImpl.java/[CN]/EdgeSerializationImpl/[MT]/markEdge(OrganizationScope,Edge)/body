{
  final MutationBatch batch=keyspace.prepareMutationBatch().withConsistencyLevel(cassandraConfig.getWriteCL());
  doWrite(scope,edge,new RowOp<RowKey>(){
    @Override public <R extends RowKey>void doWrite(    final MultiTennantColumnFamily<OrganizationScope,R,DirectedEdge> columnFamily,    final R rowKey,    final DirectedEdge edge){
      batch.withRow(columnFamily,ScopedRowKey.fromKey(scope,rowKey)).putColumn(edge,true);
    }
    @Override public void doWrite(    final MultiTennantColumnFamily<OrganizationScope,EdgeRowKey,UUID> columnFamily,    final EdgeRowKey rowKey,    final UUID version){
      batch.withRow(columnFamily,ScopedRowKey.fromKey(scope,rowKey)).putColumn(version,true);
    }
  }
);
  return batch;
}

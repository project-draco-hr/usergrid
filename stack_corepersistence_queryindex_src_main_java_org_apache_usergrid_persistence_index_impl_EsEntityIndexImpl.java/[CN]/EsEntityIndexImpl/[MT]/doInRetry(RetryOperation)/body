{
  for (int i=0; i < MAX_WAITS; i++) {
    try {
      if (operation.doOp()) {
        return;
      }
    }
 catch (    Exception e) {
      logger.error("Unable to execute operation, retrying",e);
    }
    try {
      Thread.sleep(WAIT_TIME);
    }
 catch (    InterruptedException e) {
    }
  }
}

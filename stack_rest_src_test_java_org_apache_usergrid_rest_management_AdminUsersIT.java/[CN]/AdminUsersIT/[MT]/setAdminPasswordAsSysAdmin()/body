{
  String superToken=superAdminToken();
  String newPassword="foo";
  Map<String,String> data=new HashMap<String,String>();
  data.put("newpassword",newPassword);
  JsonNode node=mapper.readTree(resource().path("/management/users/test/password").queryParam("access_token",superToken).accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).post(String.class,data));
  assertNull(getError(node));
  refreshIndex("test-organization","test-app");
  String token=mgmtToken("test",newPassword);
  assertNotNull(token);
  data.put("newpassword","test");
  node=mapper.readTree(resource().path("/management/users/test/password").queryParam("access_token",superToken).accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).post(String.class,data));
  assertNull(getError(node));
}

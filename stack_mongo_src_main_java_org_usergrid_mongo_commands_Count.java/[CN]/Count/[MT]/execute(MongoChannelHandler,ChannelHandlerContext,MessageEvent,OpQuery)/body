{
  ApplicationInfo application=SubjectUtils.getApplication(Identifier.fromName(opQuery.getDatabaseName()));
  if (application == null) {
    OpReply reply=new OpReply(opQuery);
    return reply;
  }
  EntityManager em=handler.getEmf().getEntityManager(application.getId());
  OpReply reply=new OpReply(opQuery);
  try {
    Results results=em.getCollection(em.getApplicationRef(),(String)opQuery.getQuery().get("count"),null,100000,Results.Level.IDS,false);
    reply.addDocument(map(entry("n",results.size() * 1.0),entry("ok",1.0)));
  }
 catch (  Exception ex) {
    logger.error("Unable to retrieve collections",ex);
  }
  return reply;
}

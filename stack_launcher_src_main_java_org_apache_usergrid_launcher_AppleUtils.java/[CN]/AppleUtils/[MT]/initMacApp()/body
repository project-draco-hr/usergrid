{
  com.apple.eawt.Application macApp=com.apple.eawt.Application.getApplication();
  macApp.setDockIconImage(new ImageIcon(App.class.getResource("dock_icon.png")).getImage());
  macApp.setAboutHandler(new com.apple.eawt.AboutHandler(){
    @Override public void handleAbout(    com.apple.eawt.AppEvent.AboutEvent evt){
      JOptionPane.showMessageDialog(null,"Apache Usergrid Standalone Server Launcher\nApache Software Foundation","About Apache Usergrid Launcher",JOptionPane.INFORMATION_MESSAGE);
    }
  }
);
}

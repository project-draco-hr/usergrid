{
  jg.writeFieldName("connections");
  jg.writeStartObject();
  Set<String> connectionTypes=em.getConnectionTypes(entity);
  for (  String connectionType : connectionTypes) {
    jg.writeFieldName(connectionType);
    jg.writeStartArray();
    Results results=em.getConnectedEntities(new SimpleEntityRef(entity.getType(),entity.getUuid()),connectionType,null,Level.IDS);
    List<ConnectionRef> connections=results.getConnections();
    for (    ConnectionRef connectionRef : connections) {
      jg.writeObject(connectionRef.getTargetRefs().getUuid());
    }
    jg.writeEndArray();
  }
  jg.writeEndObject();
}

{
  File file=null;
  if (parent == null) {
    file=new File(dirName);
  }
 else {
    file=new File(parent,dirName);
  }
  boolean wasCreated=false;
  if (file.exists() && file.isDirectory()) {
    wasCreated=true;
  }
 else {
    wasCreated=file.mkdir();
  }
  if (!wasCreated) {
    throw new RuntimeException("Unable to create directory:" + dirName);
  }
  return file;
}

{
  StringBuffer sb=new StringBuffer();
  sb.append("request details:\n  ");
  sb.append(action);
  sb.append(" ");
  sb.append(this);
  sb.append("\n  payload: ");
  sb.append(payload);
  sb.append("\n  owner: ");
  sb.append(owner);
  sb.append("\n  principal: ");
  sb.append(SecurityUtils.getSubject().getPrincipal());
  return sb.toString();
}

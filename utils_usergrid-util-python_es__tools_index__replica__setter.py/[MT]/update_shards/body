def update_shards(index_name):
    update = False
    if (len(includes) == 0):
        update = True
    else:
        for include in includes:
            if (include in index_name):
                update = True
    if (len(excludes) > 0):
        for exclude in excludes:
            if (exclude in index_name):
                update = False
    if update:
        print index_name

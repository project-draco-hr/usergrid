{
  boolean prev_ws=false;
  StringBuilder builder=new StringBuilder();
  for (int i=0; i < str.length(); i++) {
    char c=str.charAt(i);
    if (Character.isWhitespace(c)) {
      if (!prev_ws) {
        builder.append(' ');
      }
      prev_ws=true;
    }
 else {
      prev_ws=false;
      builder.append(c);
    }
  }
  return builder.toString().trim();
}

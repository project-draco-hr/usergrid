{
  final ScopedRowKey rowKey=ScopedRowKey.fromKey(key.scope,key);
  try {
    OperationResult<Column<Boolean>> column=HystrixCassandra.user(keyspace.prepareQuery(EDGE_SHARD_COUNTS).getKey(rowKey).getColumn(true));
    return column.getResult().getLongValue();
  }
 catch (  RuntimeException re) {
    if (re.getCause().getCause() instanceof NotFoundException) {
      return 0;
    }
    throw re;
  }
}

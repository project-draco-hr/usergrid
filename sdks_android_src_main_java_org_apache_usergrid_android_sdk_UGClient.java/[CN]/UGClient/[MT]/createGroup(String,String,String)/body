{
  Map<String,Object> data=new HashMap<String,Object>();
  data.put("type","group");
  data.put("path",groupPath);
  if (groupTitle != null) {
    data.put("title",groupTitle);
  }
  if (groupName != null) {
    data.put("name",groupName);
  }
  return apiRequest(HTTP_METHOD_POST,null,data,organizationId,applicationId,"groups");
}

def POST(self, collection, data, auth=None, **kwargs):
    url = post_collection_url_template.format(collection=collection, **self.url_data)
    if auth:
        r = requests.post(url, data=json.dumps(data), headers={'Authorization': ('Bearer %s' % auth.access_token), })
    else:
        r = self.session.post(url, data=json.dumps(data))
    return UsergridResponse(r, self)

def PUT(self, collection, uuid_name, data, auth=None, **kwargs):
    url = put_entity_url_template.format(collection=collection, uuid_name=uuid_name, **self.url_data)
    if auth:
        r = requests.put(url, data=json.dumps(data), headers={'Authorization': ('Bearer %s' % auth.access_token), })
    else:
        r = self.session.put(url, data=json.dumps(data))
    return UsergridResponse(r, self)

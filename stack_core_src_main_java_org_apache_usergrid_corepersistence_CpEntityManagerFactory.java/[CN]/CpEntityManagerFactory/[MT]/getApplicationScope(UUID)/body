{
  Query q=Query.fromQL(PROPERTY_UUID + " = '" + applicationId.toString()+ "'");
  EntityIndex ei=ecif.createEntityIndex(SYSTEM_ORG_SCOPE,SYSTEM_APPS_SCOPE);
  Results results=ei.search(SYSTEM_APPS_SCOPE,q);
  if (results.isEmpty()) {
    return null;
  }
  Entity appEntity=results.iterator().next();
  return new CollectionScopeImpl(new SimpleId(((UUID)(appEntity.getField("organizationUuid")).getValue()),"organization"),new SimpleId(appEntity.getId().getUuid(),"application"),appEntity.getField(PROPERTY_NAME).getValue().toString());
}

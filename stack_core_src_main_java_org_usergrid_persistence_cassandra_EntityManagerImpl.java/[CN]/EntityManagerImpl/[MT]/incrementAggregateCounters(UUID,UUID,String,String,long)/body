{
  long timestamp=cass.createTimestamp();
  Mutator<ByteBuffer> m=createMutator(cass.getApplicationKeyspace(applicationId),be);
  if (counterUtils.getIsCounterBatched()) {
    counterUtils.batchIncrementAggregateCounters(null,applicationId,userId,groupId,null,category,counterName,value,timestamp);
  }
 else {
    counterUtils.batchIncrementAggregateCounters(m,applicationId,userId,groupId,null,category,counterName,value,timestamp);
  }
  batchExecute(m,CassandraService.RETRY_COUNT);
}

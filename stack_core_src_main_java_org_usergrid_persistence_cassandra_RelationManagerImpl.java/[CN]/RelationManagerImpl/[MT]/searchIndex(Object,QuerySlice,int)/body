{
  DynamicComposite start=getStart(slice);
  DynamicComposite finish=getFinish(slice);
  if (slice.isReversed() && (start != null) && (finish != null)) {
    DynamicComposite temp=start;
    start=finish;
    finish=temp;
  }
  Object keyPrefix=key(indexKey,slice.getPropertyName());
  IndexScanner scanner=new IndexBucketScanner(cass,indexBucketLocator,ENTITY_INDEX,applicationId,IndexType.CONNECTION,keyPrefix,start,finish,slice.isReversed(),pageSize,slice.getPropertyName());
  return scanner;
}

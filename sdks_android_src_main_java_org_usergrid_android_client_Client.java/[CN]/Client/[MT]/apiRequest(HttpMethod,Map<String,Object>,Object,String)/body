{
  ApiResponse response=null;
  try {
    response=httpRequest(method,ApiResponse.class,params,data,segments);
    Log.i(TAG,"Client.apiRequest(): Response: " + response);
  }
 catch (  HttpClientErrorException e) {
    Log.e(TAG,"Client.apiRequest(): HTTP error: " + e.getLocalizedMessage());
    response=Utils.parse(e.getResponseBodyAsString(),ApiResponse.class);
    if ((response != null) && !isEmpty(response.getError())) {
      Log.e(TAG,"Client.apiRequest(): Response error: " + response.getError());
      if (!isEmpty(response.getException())) {
        Log.e(TAG,"Client.apiRequest(): Response exception: " + response.getException());
      }
    }
  }
  return response;
}

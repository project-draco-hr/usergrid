{
  this.properties=properties;
  if (properties != null) {
    maxTokenAge=Long.parseLong(properties.getProperty("usergrid.auth.token_max_age","" + MAX_TOKEN_AGE));
    maxTokenAge=maxTokenAge > 0 ? maxTokenAge : MAX_TOKEN_AGE;
    tokenSecretSalt=properties.getProperty("usergrid.auth.token_secret_salt",TOKEN_SECRET_SALT);
  }
}

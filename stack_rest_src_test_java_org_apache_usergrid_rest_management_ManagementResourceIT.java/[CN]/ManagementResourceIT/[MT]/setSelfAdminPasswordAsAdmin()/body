{
  String newPassword="foo";
  Map<String,String> data=new HashMap<String,String>();
  data.put("newpassword",newPassword);
  data.put("oldpassword","test");
  JsonNode node=resource().path("/management/users/test/password").accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).post(JsonNode.class,data);
  assertNull(getError(node));
  adminAccessToken=mgmtToken("test",newPassword);
  data.put("oldpassword",newPassword);
  data.put("newpassword","test");
  node=resource().path("/management/users/test/password").queryParam("access_token",adminAccessToken).accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).post(JsonNode.class,data);
  assertNull(getError(node));
}

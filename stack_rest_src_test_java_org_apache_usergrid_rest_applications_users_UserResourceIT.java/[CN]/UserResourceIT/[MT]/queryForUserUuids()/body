{
  UserRepo.INSTANCE.load(resource(),access_token);
  reindex("test-organization","test-app");
  Status status=null;
  String ql="uuid = " + UserRepo.INSTANCE.getByUserName("user1");
  JsonNode node=mapper.readTree(resource().path("/test-organization/test-app/users").queryParam("ql",ql).queryParam("access_token",access_token).accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).get(String.class));
  Map<String,String> payload=hashMap("name","Austin").map("state","TX");
  node=mapper.readTree(resource().path("/test-organization/test-app/curts").queryParam("access_token",access_token).accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).post(String.class,payload));
  UUID userId=UUID.fromString(node.get("entities").get(0).get("uuid").asText());
  assertNotNull(userId);
  reindex("test-organization","test-app");
  ql="uuid = " + userId;
  node=mapper.readTree(resource().path("/test-organization/test-app/curts").queryParam("ql",ql).queryParam("access_token",access_token).accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).get(String.class));
  assertNotNull(node.get("entities").get(0).get("uuid"));
}

{
  Map<String,String> payload=hashMap("grant_type","password").map("username","ed@anuff.com").map("password","sesame").map("ttl","derp");
  Status responseStatus=null;
  try {
    resource().path("/test-organization/test-app/token").accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).post(JsonNode.class,payload);
  }
 catch (  UniformInterfaceException uie) {
    responseStatus=uie.getResponse().getClientResponseStatus();
  }
  assertEquals(Status.BAD_REQUEST,responseStatus);
}

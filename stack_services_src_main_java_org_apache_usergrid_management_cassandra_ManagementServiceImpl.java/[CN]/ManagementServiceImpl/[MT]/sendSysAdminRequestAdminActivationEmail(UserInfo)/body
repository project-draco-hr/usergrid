{
  String token=getActivationTokenForAdminUser(user.getUuid(),0);
  String activation_url=String.format(properties.getProperty(PROPERTIES_ADMIN_ACTIVATION_URL),user.getUuid().toString()) + "?token=" + token;
  sendHtmlMail(properties,getAdminSystemEmail(),properties.getProperty(PROPERTIES_MAILER_EMAIL),"Request For Admin User Account Activation " + user.getEmail(),appendEmailFooter(emailMsg(hashMap("user_email",user.getEmail()).map("activation_url",activation_url),PROPERTIES_EMAIL_SYSADMIN_ADMIN_ACTIVATION)));
}

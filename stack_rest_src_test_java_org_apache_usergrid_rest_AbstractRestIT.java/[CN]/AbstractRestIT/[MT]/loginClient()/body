{
  String appNameOnly=appInfo.getName().split("/")[1];
  client=new Client("test-organization",appNameOnly).withApiUrl(UriBuilder.fromUri("http://localhost/").port(tomcatRuntime.getPort()).build().toString());
  org.apache.usergrid.java.client.response.ApiResponse response=client.authorizeAppUser(userEmail,"sesame");
  assertTrue(response != null && response.getError() == null);
}

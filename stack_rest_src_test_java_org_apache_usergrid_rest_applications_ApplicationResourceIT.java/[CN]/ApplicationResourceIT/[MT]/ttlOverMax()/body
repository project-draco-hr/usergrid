{
  Map<String,String> payload=hashMap("grant_type","password").map("username","test@usergrid.com").map("password","test").map("ttl",Long.MAX_VALUE + "");
  Status responseStatus=null;
  try {
    resource().path(orgAppPath + "token").accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).post(String.class,payload);
  }
 catch (  UniformInterfaceException uie) {
    responseStatus=uie.getResponse().getClientResponseStatus();
  }
  assertEquals(Status.BAD_REQUEST,responseStatus);
}

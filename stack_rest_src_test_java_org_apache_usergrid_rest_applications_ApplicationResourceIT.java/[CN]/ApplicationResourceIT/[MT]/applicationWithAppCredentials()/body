{
  Credentials appCredentials=getAppCredentials();
  ApiResponse apiResponse=this.app().getResource(false).queryParam("grant_type","client_credentials").queryParam("client_id",appCredentials.getClientId()).queryParam("client_secret",appCredentials.getClientSecret()).accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).get(ApiResponse.class);
  assertNotNull(apiResponse);
  assertNull(apiResponse.getError());
}

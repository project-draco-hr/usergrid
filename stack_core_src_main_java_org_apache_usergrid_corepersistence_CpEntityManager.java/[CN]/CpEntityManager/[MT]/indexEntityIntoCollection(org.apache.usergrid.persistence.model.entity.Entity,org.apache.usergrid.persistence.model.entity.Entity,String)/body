{
  final EntityIndex ei=getManagerCache().getEntityIndex(applicationScope);
  final EntityIndexBatch batch=ei.createBatch();
  IndexScope collectionIndexScope=new IndexScopeImpl(applicationScope.getApplication(),collectionEntity.getId(),CpEntityManager.getCollectionScopeNameFromCollectionName(collName));
  batch.index(collectionIndexScope,memberEntity);
  IndexScope entityAllTypesScope=new IndexScopeImpl(applicationScope.getApplication(),collectionEntity.getId(),ALL_TYPES);
  batch.index(entityAllTypesScope,memberEntity);
  IndexScope appAllTypesScope=new IndexScopeImpl(applicationScope.getApplication(),applicationScope.getApplication(),ALL_TYPES);
  batch.index(appAllTypesScope,memberEntity);
  batch.execute();
}

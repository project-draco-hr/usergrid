{
  final Map entityMap=entityToMap(entity);
  entityMap.put(ENTITY_CONTEXT_FIELDNAME,context);
  entityMap.put(ENTITY_ID_FIELDNAME,IndexingUtils.idString(entity.getId()).toLowerCase());
  entityMap.put(ENTITY_ID_FIELDNAME,IndexingUtils.idString(entity.getId()).toLowerCase());
  return entityMap;
}

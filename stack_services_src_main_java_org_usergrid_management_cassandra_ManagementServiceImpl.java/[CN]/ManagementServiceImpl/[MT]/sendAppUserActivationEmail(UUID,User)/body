{
  String token=getActivationTokenForAppUser(applicationId,user.getUuid());
  String activation_url=String.format(properties.getProperty("usergrid.user.activation.url"),applicationId.toString(),user.getUuid().toString()) + "?token=" + token;
  sendAppUserEmail(user,"User Account Confirmation: " + user.getEmail(),emailMsg(hashMap("activation_url",activation_url),EMAIL_USER_CONFIRMATION));
}

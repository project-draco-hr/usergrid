{
  String token=getActivationTokenForAppUser(applicationId,user.getUuid());
  String activation_url=String.format(properties.getProperty("usergrid.user.activation.url"),user.getUuid().toString()) + "?token=" + token;
  sendAppUserEmail(user,"User Account Confirmation: " + user.getEmail(),"<p>To activate your user account, click here:</p>\n<p><a href=\"" + activation_url + "\">"+ activation_url+ "</a></p>");
}

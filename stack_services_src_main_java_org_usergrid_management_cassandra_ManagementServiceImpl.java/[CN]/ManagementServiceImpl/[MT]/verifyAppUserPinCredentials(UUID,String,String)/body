{
  EntityManager em=emf.getEntityManager(applicationId);
  User user=findUserEntity(applicationId,name);
  if (user == null) {
    return null;
  }
  if (pin.equals(getCredentialsSecret((CredentialsInfo)em.getDictionaryElementValue(user,DICTIONARY_CREDENTIALS,"pin")))) {
    return user;
  }
  return null;
}

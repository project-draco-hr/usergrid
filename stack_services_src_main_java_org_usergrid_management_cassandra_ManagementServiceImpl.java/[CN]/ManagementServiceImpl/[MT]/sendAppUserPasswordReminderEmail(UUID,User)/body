{
  String token=getPasswordResetTokenForAppUser(applicationId,user.getUuid());
  String reset_url=String.format(properties.getProperty("usergrid.user.resetpw.url"),user.getUuid().toString()) + "?token=" + token;
  sendHtmlMail(properties,user.getDisplayEmailAddress(),"Usergrid Mailer <mailer@usergrid.com>","Password Reset",emailMsg(hashMap("reset_url",reset_url),EMAIL_USER_PASSWORD_RESET));
}

{
  String token=getPasswordResetTokenForAdminUser(user.getUuid());
  String reset_url=String.format(properties.getProperty("usergrid.admin.resetpw.url"),user.getUuid().toString()) + "?token=" + token;
  sendHtmlMail(properties,user.getDisplayEmailAddress(),getPropertyValue(EMAIL_MAILER),"Password Reset",appendEmailFooter(emailMsg(hashMap("reset_url",reset_url),EMAIL_ADMIN_PASSWORD_RESET)));
}

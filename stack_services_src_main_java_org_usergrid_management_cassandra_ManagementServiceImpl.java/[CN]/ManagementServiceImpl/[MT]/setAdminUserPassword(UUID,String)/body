{
  if ((userId == null) || (newPassword == null)) {
    return;
  }
  EntityManager em=emf.getEntityManager(MANAGEMENT_APPLICATION_ID);
  Entity user=em.get(userId);
  writeUserPassword(MANAGEMENT_APPLICATION_ID,user,maybeSaltPassword(newPassword));
  writeUserMongoPassword(MANAGEMENT_APPLICATION_ID,user,mongoPasswordCredentials((String)user.getProperty("username"),newPassword));
}

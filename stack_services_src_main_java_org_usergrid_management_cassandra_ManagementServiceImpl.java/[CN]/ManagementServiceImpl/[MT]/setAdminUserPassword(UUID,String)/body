{
  if ((userId == null) || (newPassword == null)) {
    return;
  }
  User user=emf.getEntityManager(MANAGEMENT_APPLICATION_ID).get(userId,User.class);
  writeUserPassword(MANAGEMENT_APPLICATION_ID,user,maybeSaltPassword(MANAGEMENT_APPLICATION_ID,user,newPassword));
  writeUserMongoPassword(MANAGEMENT_APPLICATION_ID,user,mongoPasswordCredentials((String)user.getProperty("username"),newPassword));
}

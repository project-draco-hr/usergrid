{
  if ((userId == null) || (newPassword == null)) {
    return;
  }
  User user=emf.getEntityManager(MANAGEMENT_APPLICATION_ID).get(userId,User.class);
  writeUserPassword(MANAGEMENT_APPLICATION_ID,user,encryptionService.defaultEncryptedCredentials(newPassword,user.getUuid(),MANAGEMENT_APPLICATION_ID));
  writeUserMongoPassword(MANAGEMENT_APPLICATION_ID,user,encryptionService.plainTextCredentials(mongoPassword((String)user.getProperty("username"),newPassword),user.getUuid(),MANAGEMENT_APPLICATION_ID));
}

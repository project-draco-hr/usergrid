{
  CredentialsInfo ci=new CredentialsInfo();
  ci.setRecoverable(false);
  ci.setCipher("sha-1");
  ci.setSecret(precypheredPassword);
  ci.setRecoverable(false);
  ci.setEncrypted(true);
  ci.setHashType(hashType);
  return doCreateAdmin(user,ci,encryptionService.plainTextCredentials(mongoPassword(user.getUsername(),precypheredPassword),user.getUuid(),MANAGEMENT_APPLICATION_ID));
}

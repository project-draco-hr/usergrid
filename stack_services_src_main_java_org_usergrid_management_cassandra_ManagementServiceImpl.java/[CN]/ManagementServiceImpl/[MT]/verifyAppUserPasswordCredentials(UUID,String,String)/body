{
  User user=findUserEntity(applicationId,name);
  if (user == null) {
    return null;
  }
  EntityManager em=emf.getEntityManager(applicationId);
  CredentialsInfo credentialsInfo=(CredentialsInfo)em.getDictionaryElementValue(user,DICTIONARY_CREDENTIALS,"password");
  if (StringUtils.equals(user.getHashtype(),User.HASHTYPE_MD5)) {
    password=credentialsInfo.encrypt(User.HASHTYPE_MD5,"",password);
  }
  if (checkPassword(password,credentialsInfo)) {
    if (!user.activated()) {
      throw new UnactivatedAdminUserException();
    }
    if (user.disabled()) {
      throw new DisabledAdminUserException();
    }
    return user;
  }
  return null;
}

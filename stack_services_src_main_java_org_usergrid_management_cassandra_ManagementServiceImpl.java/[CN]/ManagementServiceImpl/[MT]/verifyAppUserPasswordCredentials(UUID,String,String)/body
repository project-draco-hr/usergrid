{
  User user=findUserEntity(applicationId,name);
  if (user == null) {
    return null;
  }
  if (checkPassword(password,getCredentials(applicationId,user.getUuid(),USER_PASSWORD))) {
    if (!user.activated()) {
      throw new UnactivatedAdminUserException();
    }
    if (user.disabled()) {
      throw new DisabledAdminUserException();
    }
    return user;
  }
  return null;
}

{
  EntityManager em=emf.getEntityManager(applicationId);
  User user=em.get(userId,User.class);
  if (user == null) {
    return;
  }
  if (user.getEmail() == null) {
    return;
  }
  String pin=getCredentialsSecret((CredentialsInfo)em.getDictionaryElementValue(user,DICTIONARY_CREDENTIALS,"pin"));
  sendHtmlMail(properties,user.getDisplayEmailAddress(),properties.getProperty(PROPERTIES_MAILER_EMAIL),"Your app pin",appendEmailFooter(emailMsg(hashMap("pin",pin),PROPERTIES_EMAIL_USER_PIN_REQUEST)));
}

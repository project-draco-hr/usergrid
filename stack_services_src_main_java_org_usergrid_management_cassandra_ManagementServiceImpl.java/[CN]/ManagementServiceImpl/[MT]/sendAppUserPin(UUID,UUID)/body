{
  EntityManager em=emf.getEntityManager(applicationId);
  User user=em.get(userId,User.class);
  if (user == null) {
    return;
  }
  if (user.getEmail() == null) {
    return;
  }
  String pin=getCredentialsSecret(readUserPin(applicationId,userId));
  sendHtmlMail(properties,user.getDisplayEmailAddress(),getPropertyValue(PROPERTIES_MAILER_EMAIL),"Your app pin",appendEmailFooter(emailMsg(hashMap(USER_PIN,pin),PROPERTIES_EMAIL_USER_PIN_REQUEST)));
}

{
  Map<String,String> payload=hashMap("grant_type","password").map("username",clientSetup.getUsername()).map("password",clientSetup.getPassword()).map("ttl",Long.MAX_VALUE + "");
  try {
    management().token().post(Token.class,payload);
  }
 catch (  UniformInterfaceException uie) {
    assertEquals(ClientResponse.Status.BAD_REQUEST,uie.getResponse().getClientResponseStatus());
  }
}

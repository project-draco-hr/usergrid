{
  final String indexPrefixConfig=StringUtils.isNotEmpty(indexFig.getIndexPrefix()) ? indexFig.getIndexPrefix().toLowerCase() : "";
  final String keyspaceName=cassandraFig.getApplicationKeyspace().toLowerCase();
  final boolean removePrefix=indexPrefixConfig.length() == 0 || keyspaceName.contains(indexPrefixConfig);
  return !removePrefix ? indexPrefixConfig + "_" + keyspaceName : keyspaceName;
}

{
  StringBuilder rs=new StringBuilder();
  byte[] rnd=new byte[BCRYPT_SALT_LEN];
  random.nextBytes(rnd);
  rs.append("$2a$");
  if (logRounds < 10) {
    rs.append("0");
  }
  rs.append(Integer.toString(logRounds));
  rs.append("$");
  rs.append(encodeBase64(rnd,rnd.length));
  return rs.toString();
}

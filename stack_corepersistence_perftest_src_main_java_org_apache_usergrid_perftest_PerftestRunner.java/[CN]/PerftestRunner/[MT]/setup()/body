{
synchronized (lock) {
    stopSignal=false;
    running=false;
    startTime=0;
    stopTime=0;
    if (stats != null) {
      stats.reset();
    }
    stats=injector.getInstance(CallStats.class);
    test=loader.getChildInjector().getInstance(Perftest.class);
    executorService=Executors.newFixedThreadPool(test.getThreadCount());
    needsReset=false;
  }
}

{
  final boolean externalTokensEnabled=!StringUtils.isEmpty(properties.getProperty(ManagementResource.USERGRID_CENTRAL_URL));
  if (externalTokensEnabled) {
    throw new IllegalArgumentException("Admin Users must reactivate via " + properties.getProperty(ManagementResource.USERGRID_CENTRAL_URL));
  }
  logger.info("Send activation email for user: {}",user.getUuid());
  ApiResponse response=createApiResponse();
  management.startAdminUserActivationFlow(user);
  response.setAction("reactivate user");
  return response;
}

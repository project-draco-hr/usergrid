{
  StringBuilder sb=new StringBuilder();
  for (Throwable e=this; e != null; e=e.getCause()) {
    if (sb.length() > 0) {
      sb.append(" / ");
    }
    String sMsg=e.getMessage();
    if ((sMsg == null) || (sMsg.length() == 0)) {
      sMsg=e.getClass().getSimpleName();
    }
    sb.append(sMsg);
  }
  return sb.toString();
}

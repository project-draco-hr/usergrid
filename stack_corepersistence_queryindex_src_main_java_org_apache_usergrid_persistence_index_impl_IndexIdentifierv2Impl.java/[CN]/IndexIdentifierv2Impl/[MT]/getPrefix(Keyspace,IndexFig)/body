{
  final String indexPrefixConfig=StringUtils.isNotEmpty(config.getIndexPrefix()) ? config.getIndexPrefix().toLowerCase() : "usergrid";
  final String keyspaceName=keyspace.getKeyspaceName().toLowerCase();
  final boolean removePrefix=indexPrefixConfig.contains("usergrid") && keyspaceName.contains("usergrid");
  return !removePrefix ? indexPrefixConfig + "_" + keyspaceName : keyspaceName;
}

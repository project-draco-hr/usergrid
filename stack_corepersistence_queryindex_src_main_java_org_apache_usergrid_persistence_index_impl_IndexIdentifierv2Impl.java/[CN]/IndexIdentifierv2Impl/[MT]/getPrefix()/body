{
  final String indexPrefixConfig=StringUtils.isNotEmpty(indexFig.getIndexPrefix()) ? indexFig.getIndexPrefix().toLowerCase() : "usergrid";
  final String keyspaceName=cassandraFig.getApplicationKeyspace().toLowerCase();
  final boolean removePrefix=indexPrefixConfig.contains("usergrid") && keyspaceName.contains("usergrid");
  return !removePrefix ? indexPrefixConfig + "_" + keyspaceName : keyspaceName;
}

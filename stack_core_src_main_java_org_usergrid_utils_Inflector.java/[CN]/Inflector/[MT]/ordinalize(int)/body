{
  int remainder=number % 100;
  String numberStr=Integer.toString(number);
  if ((11 <= number) && (number <= 13)) {
    return numberStr + "th";
  }
  remainder=number % 10;
  if (remainder == 1) {
    return numberStr + "st";
  }
  if (remainder == 2) {
    return numberStr + "nd";
  }
  if (remainder == 3) {
    return numberStr + "rd";
  }
  return numberStr + "th";
}

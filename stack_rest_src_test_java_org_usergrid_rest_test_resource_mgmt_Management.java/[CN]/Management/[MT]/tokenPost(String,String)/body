{
  Map<String,String> payload=MapUtils.hashMap("grant_type","password").map("username",username).map("password",password);
  JsonNode node=resource().path(String.format("%s/token",url())).accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).post(JsonNode.class,payload);
  return node.get("access_token").asText();
}

{
  final FieldTypeName fieldType=field.getTypeName();
switch (fieldType) {
case BOOLEAN:
case DOUBLE:
case INTEGER:
case LONG:
case STRING:
case UUID:
    break;
default :
  throw new RuntimeException(String.format("Type %s is not a supported type for unique values",fieldType));
}
builder.addString(fieldType.name());
builder.addString(field.getName());
builder.addString(field.getValue().toString().toLowerCase());
}

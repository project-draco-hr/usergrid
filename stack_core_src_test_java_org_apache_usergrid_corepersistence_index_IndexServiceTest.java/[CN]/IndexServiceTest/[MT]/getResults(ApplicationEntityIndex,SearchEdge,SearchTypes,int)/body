{
  final int attempts=100;
  String ql="select *";
  for (int i=0; i < attempts; i++) {
    final CandidateResults candidateResults=applicationEntityIndex.search(searchEdge,searchTypes,ql,100,0);
    if (candidateResults.size() == expectedSize) {
      return candidateResults;
    }
    try {
      Thread.sleep(100);
    }
 catch (    InterruptedException e) {
    }
  }
  fail("Could not find candidates of size " + expectedSize + "after "+ attempts+ " attempts");
  return null;
}

{
  JsonNode node=mapper.readTree(resource().path("/management/organizations").accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).post(String.class,buildOrgUserPayload("reactivate")));
  logNode(node);
  String email=node.get("data").get("owner").get("email").asText();
  String uuid=node.get("data").get("owner").get("uuid").asText();
  assertNotNull(email);
  assertEquals("MUUserResourceIT-reactivate@apigee.com",email);
  refreshIndex(context.getOrgName(),context.getAppName());
  node=mapper.readTree(resource().path(String.format("/management/users/%s/reactivate",uuid)).queryParam("access_token",adminAccessToken).accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON_TYPE).get(String.class));
  refreshIndex(context.getOrgName(),context.getAppName());
  List<Message> inbox=org.jvnet.mock_javamail.Mailbox.get(email);
  assertFalse(inbox.isEmpty());
  logNode(node);
}
